# =========================
# Provider switches
# =========================
# true = use real Microsoft/Azure services
# false = use mock services (default)
USE_AZURE_OPENAI=false
USE_AZURE_SPEECH=false
USE_AZURE_TRANSLATOR=false
USE_AZURE_SEARCH=false
USE_MS_GRAPH=false
USE_ENTRA_AUTH=false

# =========================
# Server
# =========================
PORT=3001
FRONTEND_ORIGIN=http://localhost:5173

# =========================
# Azure OpenAI
# (only needed if USE_AZURE_OPENAI=true)
# =========================
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_DEPLOYMENT=
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# =========================
# Azure AI Speech
# (only needed if USE_AZURE_SPEECH=true)
# =========================
AZURE_SPEECH_KEY=
AZURE_SPEECH_REGION=

# =========================
# Azure Translator
# (only needed if USE_AZURE_TRANSLATOR=true)
# =========================
AZURE_TRANSLATOR_KEY=
AZURE_TRANSLATOR_REGION=
AZURE_TRANSLATOR_ENDPOINT=

# =========================
# Azure AI Search (RAG)
# (only needed if USE_AZURE_SEARCH=true)
# =========================
AZURE_SEARCH_ENDPOINT=
AZURE_SEARCH_KEY=
AZURE_SEARCH_INDEX=

# =========================
# Microsoft Entra ID + Graph
# (only needed if USE_MS_GRAPH=true or USE_ENTRA_AUTH=true)
# =========================
ENTRA_CLIENT_ID=
ENTRA_CLIENT_SECRET=
ENTRA_TENANT_ID=
ENTRA_REDIRECT_URI=http://localhost:5173/auth/callback
GRAPH_SCOPES=Calendars.ReadWrite,Notes.ReadWrite,User.Read,Files.ReadWrite
